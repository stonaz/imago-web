BODY {
PADDING-RIGHT: 0px; PADDING-LEFT: 0px; PADDING-BOTTOM: 0px; MARGIN: 0px; PADDING-TOP: 0px; 
BACKGROUND-COLOR: #F0F0F0;
}

DIV#header {
BACKGROUND-COLOR: #000000; HEIGHT: 45px; WIDTH: 100%;  vertical-align: middle
}

DIV#menu_orizzontale {
font-family: Arial, verdana; font-weight: bold; font-size: 12px; COLOR: #000000; BACKGROUND: #000000; PADDING-RIGHT: 0px; BORDER-TOP: black 1px solid; PADDING-LEFT: 0px; FLOAT: left; PADDING-BOTTOM: 0px; MARGIN: 0px; WIDTH:100%; PADDING-TOP: 0px
//BACKGROUND: #E6E1C8;
}

DIV#menu_orizzontale UL {
COLOR: #FFFFFF; PADDING-RIGHT: 0px; PADDING-LEFT: 0px; PADDING-BOTTOM: 0px; MARGIN: 0px; PADDING-TOP: 0px; LIST-STYLE-TYPE: none 
}

DIV#menu_orizzontale LI {
COLOR: #FFFFFF; BORDER-RIGHT: black 1px solid; PADDING-RIGHT: 0px; PADDING-LEFT: 0px; FLOAT: left; PADDING-BOTTOM: 0px; MARGIN: 0px;  PADDING-TOP: 0px
}

DIV#menu_orizzontale A {
COLOR: #FFFFFF; PADDING-RIGHT: 5px; DISPLAY: block; PADDING-LEFT: 5px; PADDING-BOTTOM: 5px;  PADDING-TOP: 5px; TEXT-DECORATION: none
}

DIV#menu_orizzontale A:hover {
COLOR: #000000; BACKGROUND-COLOR: #FFFFFF;  TEXT-DECORATION: none
}

DIV#menu_orizzontale LI UL {
DISPLAY: none
}

DIV#menu_orizzontale LI:hover UL {
BORDER-RIGHT: black 1px solid; PADDING-RIGHT: 0px; BORDER-TOP: black 1px solid;  DISPLAY: block; PADDING-LEFT: 0px; Z-INDEX: 1; BACKGROUND: white; PADDING-BOTTOM: 0px; MARGIN: 0px 0px 0px -1px; BORDER-LEFT: black 1px solid; WIDTH: 150px; PADDING-TOP: 0px; BORDER-BOTTOM: black 1px solid; POSITION: absolute
}

DIV#menu_orizzontale LI LI {
WIDTH: 150px; BORDER-TOP-STYLE: none; BORDER-RIGHT-STYLE: none; BORDER-LEFT-STYLE: none;  BORDER-BOTTOM-STYLE: none
}

DIV#menu_orizzontale LI LI A {
PADDING-RIGHT: 2px; PADDING-LEFT: 10px; PADDING-BOTTOM: 2px; PADDING-TOP: 2px
}


DIV#albero{

font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 10px; color:#000000;  
top=0;left=0;width:300px;height:400px; overflow:auto; border:1px solid #EEE;border-right:0 solid; background:url("../_imm/sfumatura2.png") repeat-x fixed bottom left;
position:relative top=0px left=0px;
}

DIV#albero A{

font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 10px; color:#0000AA; TEXT-DECORATION: none
}

DIV#albero A:hover{

font-family: Verdana, Arial, Helvetica, sans-serif; font-size: 10px; color:#AAAA00; TEXT-DECORATION: none
}


DIV#content{
BACKGROUND-COLOR: #D2D7DC; PADDING-RIGHT: 10px; PADDING-LEFT: 10px; PADDING-BOTTOM:1em; 
MARGIN-TOP: 150px;  PADDING-TOP: 1em;  MARGIN: -400px 0px 0px 300px;
}


.submit_button {
	height:1.6em;
	color:#FFFFFF;
	font-weight:bold;
	cursor:hand;
	margin:0 4px 1px 0;
	padding: 0 5px 2px 5px !important;
	border:1px solid #0000FF;
	background:#000000;
	text-align:center;
}